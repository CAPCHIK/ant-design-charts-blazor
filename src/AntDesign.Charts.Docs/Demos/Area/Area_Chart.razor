@page "/Area_Chart"
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient
@inject IJSRuntime JS
<Tabs>
    <TabPane Key="1">
        <Tab>示例1</Tab>
        <ChildContent>
            <AntDesign.Charts.Area Config="config1" OtherConfig="otherConfig" OnFirstRender="onChart1_FirstRender" />
        </ChildContent>
    </TabPane>
</Tabs>

<Divider>动手实验</Divider>
<DynamicExample @ref="@example">
    <AntDesign.Charts.Area @ref="@chart" />
</DynamicExample>

@code{

    public IChartComponent chart;
    DynamicExample example;

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        example.Chart = chart;
        JS.InvokeVoidAsync("console.log", new AntDesign.Charts.Components.Configs.Options { Padding = 45.5f });
        JS.InvokeVoidAsync("console.log", new AntDesign.Charts.Components.Configs.Options { Padding = new float[] { 45, 87 } });
        JS.InvokeVoidAsync("console.log", new AntDesign.Charts.Components.Configs.Options { Padding = AntDesign.Charts.Components.Configs.AutoValue.Instance });
    }

    #region 示例1

    private async Task onChart1_FirstRender(IChartComponent chart)
    {
        var data1 = await DemoData.FireworksSalesAsync(NavigationManager, HttpClient);
        await chart.ChangeData(data1);
    }

    AreaConfig config1 = new AreaConfig()
    {
        Title = new Charts.Title()
        {
            Visible = true,
            Text = "基础面积图",
        },
        XField = "Date",
        YField = "scales",
    };

    object otherConfig = new
    {
        xAxis = new
        {
            range = new object[] { 0, 1 },
        },
    };

    #endregion 示例1


}



